{
  "configurations": [
		{
			"name": "[DEBUG] CLI Start (Single)",
			"type": "node",
			"request": "launch",
			"args": [
				"${workspaceRoot}/src/cli/bin.ts", 
				"start",
				"-c",
				"./testconfig.json",
				"-w",
				"1"
			],
			"runtimeArgs": ["-r", "ts-node/register"],
			"cwd": "${workspaceRoot}",
			"protocol": "inspector",
			"sourceMaps": true,
			"resolveSourceMapLocations": [
				"${workspaceFolder}/**",
				"!**/node_modules/**"
			],
			"internalConsoleOptions": "openOnSessionStart",
			"console": "integratedTerminal",
			"env": {
				"TS_NODE_IGNORE": "false",
				"LOG_LEVEL": "debug",
			}
		},
		{
			"name": "[DEBUG] CLI Start (Cluster)",
			"type": "node",
			"request": "launch",
			"args": [
				"${workspaceRoot}/src/cli/bin.ts", 
				"start",
				"-c",
				"./testconfig.json",
				"-w",
				"2"
			],
			"runtimeArgs": ["-r", "ts-node/register"],
			"cwd": "${workspaceRoot}",
			"protocol": "inspector",
			"sourceMaps": true,
			"resolveSourceMapLocations": [
				"${workspaceFolder}/**",
				"!**/node_modules/**"
			],
			"internalConsoleOptions": "openOnSessionStart",
			"console": "integratedTerminal",
			"env": {
				"TS_NODE_IGNORE": "false",
				"LOG_LEVEL": "debug",
			}
		},
		{
			"name": "[DEBUG] CLI Setup",
			"type": "node",
			"request": "launch",
			"args": [
				"${workspaceRoot}/src/cli/bin.ts", 
				"setup",
				"-o",
				"./testconfig.json"
			],
			"runtimeArgs": ["-r", "ts-node/register"],
			"cwd": "${workspaceRoot}",
			"protocol": "inspector",
			"sourceMaps": true,
			"resolveSourceMapLocations": [
				"${workspaceFolder}/**",
				"!**/node_modules/**"
			],
			"internalConsoleOptions": "openOnSessionStart",
			"console": "integratedTerminal",
			"env": {
				"TS_NODE_IGNORE": "false",
				"LOG_LEVEL": "debug",
			}
		},
		{
			"name": "Debug Tests",
			"type": "node",
			"request": "launch",
			"runtimeArgs": ["--inspect-brk", "${workspaceRoot}/node_modules/.bin/jest", "--runInBand", "--forceExit", "--coverage", "false", "--silent"],
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen"
		},

		{
			"name": "Debug Current Test File",
			"type": "node",
			"request": "launch",
			"runtimeArgs": ["--inspect-brk", "${workspaceRoot}/node_modules/.bin/jest", "${fileBasenameNoExtension}", "--runInBand", "--forceExit", "--coverage", "false"],
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen"
		}
  ]
}